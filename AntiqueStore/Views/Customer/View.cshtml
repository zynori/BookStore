@model AntiqueStore.ViewModel.CustomerViewModel

@{
	ViewData["Title"] = "View";
}

<h2>View</h2>

<a href="/customer">Back</a>
<hr />

<label>First Name: </label><label name="FirstName">@Model.SelectedCustomer.FirstName</label>
<hr />
<label>Last Name: </label><label name="LastName">@Model.SelectedCustomer.LastName</label>
<hr />
<label>Email: </label><label name="Email">@Model.SelectedCustomer.Email</label>
<hr />
<label>Registration date: </label><label name="CreatedAt">@Model.SelectedCustomer.CreatedAt</label>
<hr />
<label>Orders: </label>
@foreach (var item in Model.SelectedCustomer.Orders)
{
	<label name="Id">@item.Id</label>
	<label name="Number">@item.Number</label>
	<label name="OrderedAt">@item.OrderedAt</label>
	<label name="ShippingCost">@item.ShippingCost</label>
	<label name="TotalQuantity">@item.TotalQuantity</label>
	<label name="TotalPrice">@item.TotalPrice</label>
	<label name="Books">Books: </label>
	@foreach (var orderedBooks in item.BookOrders)
	{
		<label name="Book">@orderedBooks.Book</label>
	}
}

