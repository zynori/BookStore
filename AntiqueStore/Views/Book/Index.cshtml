@model AntiqueStore.ViewModel.BookViewModel
@{
	ViewData["Title"] = "Index";
}

<h2>Books</h2>

<form action="/list" method="post">
	<input type="search" name="input" value="" placeholder="Search" />
	<input checked="checked" type="checkbox" name="inStock" value="true" /> <span>In stock</span>
	<button type="submit">Search</button>
</form>

<a href="/add">Add</a> | <a href="/forsale">I want to sell a book</a>

<table class="table table-bordered table-responsive table-hover">
	<thead style="border: none;">
		<tr>
			<th>Id</th>
			<th>Author</th>
			<th>Title</th>
			<th>Language</th>
			<th>Page</th>
			<th>Publication</th>
			<th>Quality</th>
			<th>Format</th>
			<th>Quantity</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Book book in Model.Books)
		{
		<tr>
			<td>@book.Id</td>
			<td>@book.Author</td>
			<td>@book.Title</td>
			<td>@book.Language</td>
			<td>@book.Page</td>
			<td>@book.PublicationDate.ToShortDateString()</td>
			<td>@book.Quality.Condition</td>
			<td>@book.Format.Binding</td>
			<td>@book.Quantity db</td>
			<td>@book.Price HUF</td>
			<td><a href="/edit/@book.Id">EDIT</a></td>
			<td><a href="/sell/@book.Id">SELL</a></td>
			<td><a href="/delete/@book.Id">DELETE</a></td>
			<td><a href="/view/@book.Id">VIEW</a></td>
		</tr>
		}
	</tbody>
</table>