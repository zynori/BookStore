@model IEnumerable<Book>
@{
	ViewData["Title"] = "Index";
}

<h2>Index - Books</h2>

<form action="/list" method="post">
	<input type="search" name="input" value="" placeholder="Search" />
	<input checked="checked" type="checkbox" name="inStock" value="true" /> <span>In stock</span>
	<button type="submit">Search</button>
</form>

<a href="/add">Add</a>

<table class="table table-bordered table-responsive table-hover">
	<thead style="border: none;">
		<tr>
			<th>Id</th>
			<th>Author</th>
			<th>Title</th>
			<th>Language</th>
			<th>Page</th>
			<th>Publication</th>
			<th>Quantity</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Book book in Model)
		{
		<tr>
			<td>@book.BookId</td>
			<td>@book.Author</td>
			<td>@book.Title</td>
			<td>@book.Language</td>
			<td>@book.Page</td>
			<td>@book.PublicationDate</td>
			<td>@book.Quantity db</td>
			<td>@book.Price HUF</td>
			<td><a href="/edit/@book.BookId">EDIT</a></td>
			<td><a href="/delete/@book.BookId">DELETE</a></td>
		</tr>
		}
	</tbody>
</table>
